<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="550" prefWidth="450" style="-fx-background-color: linear-gradient(to bottom right, #0b486b, #f56217);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bankapp.controller.IndividualSignUpController">

    <children>
        <VBox alignment="CENTER" layoutX="50" layoutY="60" prefWidth="350" spacing="15" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0, 0, 5);">

            <!-- Title -->
            <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #0b486b;" text="Individual Registration" />

            <!-- First Name -->
            <TextField fx:id="firstNameField" prefWidth="250" promptText="First Name" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #cccccc; -fx-padding: 8;" />

            <!-- Last Name -->
            <TextField fx:id="lastNameField" prefWidth="250" promptText="Last Name" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #cccccc; -fx-padding: 8;" />

            <!-- Customer ID -->
            <TextField fx:id="customerIDField" prefWidth="250" promptText="Customer ID" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #cccccc; -fx-padding: 8;" />

            <!-- Address -->
            <TextField fx:id="addressField" prefWidth="250" promptText="Address" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #cccccc; -fx-padding: 8;" />

            <!-- Phone Number -->
            <TextField fx:id="phoneField" prefWidth="250" promptText="Phone Number" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #cccccc; -fx-padding: 8;" />

            <!-- Register Button -->
            <Button fx:id="registerButton" prefWidth="200" style="-fx-background-color: #0b486b; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20 10 20;" text="Register" />

            <!-- Back to Sign Up -->
            <HBox alignment="CENTER" spacing="5">
                <Label style="-fx-text-fill: #555555;" text="Want to go back?" />
                <Hyperlink fx:id="backLink" style="-fx-text-fill: #f56217; -fx-font-weight: bold;" text="Back" />
            </HBox>

        </VBox>
    </children>
</AnchorPane>
