<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500" prefWidth="450" style="-fx-background-color: linear-gradient(to bottom right, #0b486b, #f56217);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bankapp.controller.MainMenuController">

    <children>
        <VBox alignment="CENTER" layoutX="50" layoutY="80" prefWidth="350" spacing="30" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0, 0, 5);">

          
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0b486b;" text="Main Menu" />

            
            <Label style="-fx-font-size: 14px; -fx-text-fill: #666666;" text="Welcome! Choose an option below." />

            
            <Button fx:id="accountManagementButton" prefHeight="50" prefWidth="250" style="-fx-background-color: #0b486b; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10 20 10 20;" text="Account Management" />

            
            <Button fx:id="transactionsButton" prefHeight="50" prefWidth="250" style="-fx-background-color: #f56217; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10 20 10 20;" text="Transactions" />

            
            <Hyperlink fx:id="logoutLink" style="-fx-text-fill: #0b486b; -fx-font-weight: bold;" text="Logout" />

        </VBox>
    </children>
</AnchorPane>
