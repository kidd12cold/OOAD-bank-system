<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bankapp.controller.AccountManagementController"
            prefWidth="450" prefHeight="500"
            style="-fx-background-color: linear-gradient(to bottom right, #0b486b, #f56217);">

    <children>
        <VBox alignment="CENTER" spacing="25" prefWidth="350" layoutX="50" layoutY="80"
              style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0, 0, 5);">

            
            <Label text="Account Management"
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #0b486b;"/>

           
            <Label text="Manage customer accounts below"
                   style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>

           
            <Button fx:id="createAccountButton" prefWidth="250" prefHeight="50"
                    style="-fx-background-color: #0b486b; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 16px; -fx-font-weight: bold;">
                <graphic>
                    <ImageView fitWidth="24" fitHeight="24">
                        <image>
                            <Image url="@/images/add_account.png"/>
                        </image>
                    </ImageView>
                </graphic>
                <text>Create Account</text>
            </Button>

            
            <Button fx:id="backButton" prefWidth="250" prefHeight="50"
                    style="-fx-background-color: #f56217; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 16px; -fx-font-weight: bold;">
                <graphic>
                    <ImageView fitWidth="24" fitHeight="24">
                        <image>
                            <Image url="@/images/back.png"/>
                        </image>
                    </ImageView>
                </graphic>
                <text>Back to Menu</text>
            </Button>

        </VBox>
    </children>
</AnchorPane>
