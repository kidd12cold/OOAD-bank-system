<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bankapp.controller.CompanyRegistrationController"
            prefWidth="500" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom right, #0b486b, #f56217);">

    <children>
        <VBox alignment="CENTER" spacing="20" prefWidth="400" layoutX="50" layoutY="60"
              style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 20, 0, 0, 8);">

            
            <Label text="Company Registration"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0b486b;"/>

            <Label text="Please enter your company details below"
                   style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>

            
            <VBox alignment="TOP_LEFT" spacing="5">
                <Label text="Company Name:" style="-fx-font-weight: bold; -fx-text-fill: #0b486b;"/>
                <TextField fx:id="companyNameField" promptText="Enter company name"
                           style="-fx-background-radius: 8; -fx-padding: 8;"/>
            </VBox>

    
            <VBox alignment="TOP_LEFT" spacing="5">
                <Label text="Email:" style="-fx-font-weight: bold; -fx-text-fill: #0b486b;"/>
                <TextField fx:id="emailField" promptText="Enter company email"
                           style="-fx-background-radius: 8; -fx-padding: 8;"/>
            </VBox>

            
            <VBox alignment="TOP_LEFT" spacing="5">
                <Label text="Address:" style="-fx-font-weight: bold; -fx-text-fill: #0b486b;"/>
                <TextField fx:id="addressField" promptText="Enter company address"
                           style="-fx-background-radius: 8; -fx-padding: 8;"/>
            </VBox>

            
            <VBox alignment="TOP_LEFT" spacing="5">
                <Label text="Company ID:" style="-fx-font-weight: bold; -fx-text-fill: #0b486b;"/>
                <TextField fx:id="companyIdField" promptText="Enter company ID"
                           style="-fx-background-radius: 8; -fx-padding: 8;"/>
            </VBox>

            
            <Button fx:id="registerButton" text="Register"
                    prefWidth="200" prefHeight="45"
                    style="-fx-background-color: #f56217; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-font-size: 16px;"/>

            
            <Hyperlink fx:id="backLink" text="Back to Menu"
                       style="-fx-text-fill: #0b486b; -fx-font-weight: bold;"/>

        </VBox>
    </children>
</AnchorPane>
