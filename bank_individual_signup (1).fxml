<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bankapp.controller.IndividualSignUpController"
            prefWidth="450" prefHeight="550"
            style="-fx-background-color: linear-gradient(to bottom right, #0b486b, #f56217);">

    <children>
        <VBox alignment="CENTER" spacing="15" prefWidth="350" layoutX="50" layoutY="60"
              style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0, 0, 5);">

            <!-- Title -->
            <Label text="Individual Registration"
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #0b486b;"/>

            <!-- First Name -->
            <TextField fx:id="firstNameField" promptText="First Name"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #cccccc; -fx-padding: 8;"
                       prefWidth="250"/>

            <!-- Last Name -->
            <TextField fx:id="lastNameField" promptText="Last Name"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #cccccc; -fx-padding: 8;"
                       prefWidth="250"/>

            <!-- Customer ID -->
            <TextField fx:id="customerIDField" promptText="Customer ID"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #cccccc; -fx-padding: 8;"
                       prefWidth="250"/>

            <!-- Address -->
            <TextField fx:id="addressField" promptText="Address"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #cccccc; -fx-padding: 8;"
                       prefWidth="250"/>

            <!-- Phone Number -->
            <TextField fx:id="phoneField" promptText="Phone Number"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #cccccc; -fx-padding: 8;"
                       prefWidth="250"/>

            <!-- Register Button -->
            <Button fx:id="registerButton" text="Register"
                    style="-fx-background-color: #0b486b; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20 10 20;"
                    prefWidth="200"/>

            <!-- Back to Sign Up -->
            <HBox alignment="CENTER" spacing="5">
                <Label text="Want to go back?" style="-fx-text-fill: #555555;"/>
                <Hyperlink text="Back" fx:id="backLink"
                           style="-fx-text-fill: #f56217; -fx-font-weight: bold;"/>
            </HBox>

        </VBox>
    </children>
</AnchorPane>
