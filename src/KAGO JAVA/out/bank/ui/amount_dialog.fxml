<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="bank.ui.controller.AmountDialogController"
      spacing="10" prefWidth="320" prefHeight="220"
      style="-fx-background-color: white; -fx-padding: 20;">
    <Label fx:id="titleLabel"
           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #0b486b;"/>
    <Label text="Selected Account:"/>
    <Label fx:id="accountLabel" style="-fx-font-weight: bold;"/>
    <Label text="Amount:"/>
    <TextField fx:id="amountField" promptText="Enter amount"/>
    <Label fx:id="messageLabel" textFill="#f56217"/>
    <HBox spacing="10">
        <Button fx:id="confirmButton" text="Confirm" onAction="#handleConfirm"
                style="-fx-background-color: #0b486b; -fx-text-fill: white; -fx-background-radius: 8;"/>
        <Button text="Cancel" onAction="#handleCancel"
                style="-fx-background-color: transparent; -fx-text-fill: #f56217; -fx-font-weight: bold;"/>
    </HBox>
</VBox>

