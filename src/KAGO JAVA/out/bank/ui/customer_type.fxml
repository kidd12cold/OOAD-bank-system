<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="bank.ui.controller.CustomerTypeController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom right, #0b486b, #f56217);">
    <children>
        <VBox alignment="CENTER" spacing="20" prefWidth="360" prefHeight="320"
              layoutX="270" layoutY="140"
              style="-fx-background-color: white; -fx-background-radius: 18; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 18, 0, 0, 8);">
            <Label text="Select Customer Type"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0b486b;"/>
            <Button text="Individual Customer" prefWidth="240" onAction="#handleIndividual"
                    style="-fx-background-color: #0b486b; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 15px; -fx-padding: 10;"/>
            <Button text="Company Customer" prefWidth="240" onAction="#handleCompany"
                    style="-fx-background-color: #276678; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 15px; -fx-padding: 10;"/>
            <Button text="Already Registered? Login" prefWidth="240" onAction="#handleLogin"
                    style="-fx-background-color: transparent; -fx-text-fill: #f56217; -fx-font-weight: bold;"/>
        </VBox>
    </children>
</AnchorPane>

