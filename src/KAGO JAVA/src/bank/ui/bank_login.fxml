<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="bank.ui.controller.LoginController"
            prefWidth="400" prefHeight="500"
            style="-fx-background-color: linear-gradient(to bottom right, #0b486b, #f56217);">

    <children>
        <VBox alignment="CENTER" spacing="20" prefWidth="300" layoutX="50" layoutY="100"
              style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0, 0, 5);">
            
            <!-- Title -->
            <Label text="Bank Login" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0b486b;"/>

            <!-- Username -->
            <TextField fx:id="usernameField" promptText="Username"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #cccccc; -fx-padding: 8;"/>

            <!-- Password -->
            <PasswordField fx:id="passwordField" promptText="Password"
                           style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #cccccc; -fx-padding: 8;"/>

            <!-- Login Button -->
            <Button text="Login"
                    onAction="#handleLogin"
                    style="-fx-background-color: #0b486b; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14px; -fx-padding: 10 20 10 20;"
                    prefWidth="200"/>

            <!-- Message -->
            <Label fx:id="messageLabel" textFill="#f56217"/>

            <!-- Register Link -->
            <HBox alignment="CENTER" spacing="5">
                <Label text="Don't have an account?" style="-fx-text-fill: #555555;"/>
                <Hyperlink text="Register" onAction="#handleRegisterLink"
                           style="-fx-text-fill: #f56217; -fx-font-weight: bold;"/>
            </HBox>

        </VBox>
    </children>
</AnchorPane>
