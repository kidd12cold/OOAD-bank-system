<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="bank.ui.controller.AuditDialogController"
      spacing="10" prefWidth="500" prefHeight="400"
      style="-fx-background-color: white; -fx-padding: 20;">
    <Label text="Audit Snapshot"
           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #0b486b;"/>
    <TableView fx:id="snapshotTable" prefHeight="300">
        <columns>
            <TableColumn fx:id="lineColumn" text="Snapshot Line" prefWidth="460"/>
        </columns>
    </TableView>
    <Label fx:id="messageLabel" textFill="#f56217"/>
    <Button text="Refresh" onAction="#handleRefresh"
            style="-fx-background-color: #0b486b; -fx-text-fill: white; -fx-background-radius: 8;"/>
</VBox>

