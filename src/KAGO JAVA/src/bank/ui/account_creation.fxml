<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="bank.ui.controller.AccountCreationController"
      spacing="10" prefWidth="360" prefHeight="320"
      style="-fx-background-color: white; -fx-padding: 20;">
    <Label text="Create Account"
           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #0b486b;"/>
    <Label text="Account Type (savings / investment / cheque):"/>
    <TextField fx:id="typeField" promptText="Enter account type"/>
    <Label text="Opening Deposit:"/>
    <TextField fx:id="amountField" promptText="Enter opening amount"/>
    <Label text="Employer (for cheque individual):"/>
    <TextField fx:id="employerField" promptText="Enter employer (optional)"/>
    <Label fx:id="messageLabel" textFill="#f56217"/>
    <HBox spacing="10">
        <Button text="Create" onAction="#handleCreate"
                style="-fx-background-color: #0b486b; -fx-text-fill: white; -fx-background-radius: 8;"/>
        <Button text="Close" onAction="#handleClose"
                style="-fx-background-color: transparent; -fx-text-fill: #f56217; -fx-font-weight: bold;"/>
    </HBox>
</VBox>

