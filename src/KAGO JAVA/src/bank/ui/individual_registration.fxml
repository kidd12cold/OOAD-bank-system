<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="bank.ui.controller.IndividualRegistrationController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom right, #0b486b, #f56217);">
    <children>
        <VBox alignment="TOP_CENTER" spacing="15" prefWidth="600"
              layoutX="150" layoutY="40"
              style="-fx-background-color: white; -fx-background-radius: 18; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 18, 0, 0, 8);">
            <Label text="Individual Registration"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0b486b;"/>
            <GridPane hgap="12" vgap="12">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Label text="First Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="firstNameField" promptText="Enter first name"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Surname:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="surnameField" promptText="Enter surname"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="National ID:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="nationalIdField" promptText="Enter national ID"
                           GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Date of Birth (YYYY-MM-DD):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="dobField" promptText="1990-01-01"
                           GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Address:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="addressField" promptText="Enter address"
                           GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Phone:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="phoneField" promptText="Enter phone"
                           GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <Label text="Email:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField" promptText="Enter email"
                           GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                <Label text="Username:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                <TextField fx:id="usernameField" promptText="Choose username"
                           GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                <Label text="Password:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                <TextField fx:id="passwordField" promptText="Choose password"
                           GridPane.rowIndex="8" GridPane.columnIndex="1"/>

                <Label text="Employment Status:" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
                <TextField fx:id="employmentStatusField" promptText="employed / unemployed"
                           GridPane.rowIndex="9" GridPane.columnIndex="1"/>

                <Label text="Employer Name:" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
                <TextField fx:id="employerNameField" promptText="Enter employer (optional)"
                           GridPane.rowIndex="10" GridPane.columnIndex="1"/>
            </GridPane>

            <Label fx:id="messageLabel" textFill="#f56217"/>

            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button text="Register" onAction="#handleRegister"
                        style="-fx-background-color: #0b486b; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 10 20 10 20;"/>
                <Button text="Go to Login" onAction="#handleGoToLogin"
                        style="-fx-background-color: transparent; -fx-text-fill: #276678; -fx-font-weight: bold;"/>
                <Button text="Back" onAction="#handleBack"
                        style="-fx-background-color: transparent; -fx-text-fill: #f56217; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>

