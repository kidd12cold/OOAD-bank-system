<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bankapp.controller.SignUpController"
            prefWidth="450" prefHeight="550"
            style="-fx-background-color: linear-gradient(to bottom right, #0b486b, #f56217);">

    <children>
        <VBox alignment="CENTER" spacing="18" prefWidth="350" layoutX="50" layoutY="70"
              style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0, 0, 5);">
            
            <!-- Title -->
            <Label text="Create Your Account" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #0b486b;"/>

            <!-- Full Name -->
            <TextField fx:id="fullNameField" promptText="Full Name"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #cccccc; -fx-padding: 8;"/>

            <!-- Email -->
            <TextField fx:id="emailField" promptText="Email Address"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #cccccc; -fx-padding: 8;"/>

            <!-- Username -->
            <TextField fx:id="usernameField" promptText="Username"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #cccccc; -fx-padding: 8;"/>

            <!-- Password -->
            <PasswordField fx:id="passwordField" promptText="Password"
                           style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #cccccc; -fx-padding: 8;"/>

            <!-- Confirm Password -->
            <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password"
                           style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #cccccc; -fx-padding: 8;"/>

            <!-- Account Type Selection -->
            <Label text="Select Account Type:" style="-fx-font-size: 14px; -fx-text-fill: #555555;"/>
            <HBox alignment="CENTER" spacing="15">
                <ToggleGroup fx:id="accountTypeGroup"/>
                <RadioButton text="Individual" fx:id="individualButton" toggleGroup="$accountTypeGroup"
                             style="-fx-font-size: 14px; -fx-text-fill: #0b486b;"/>
                <RadioButton text="Company/Organisation" fx:id="companyButton" toggleGroup="$accountTypeGroup"
                             style="-fx-font-size: 14px; -fx-text-fill: #0b486b;"/>
            </HBox>

            <!-- Sign Up Button -->
            <Button text="Sign Up" fx:id="signupButton"
                    style="-fx-background-color: #0b486b; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14px; -fx-padding: 10 20 10 20;"
                    prefWidth="220"/>

            <!-- Back to Login -->
            <HBox alignment="CENTER" spacing="5">
                <Label text="Already have an account?" style="-fx-text-fill: #555555;"/>
                <Hyperlink text="Login" fx:id="loginLink"
                           style="-fx-text-fill: #f56217; -fx-font-weight: bold;"/>
            </HBox>

        </VBox>
    </children>
</AnchorPane>
