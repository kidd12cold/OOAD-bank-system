<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bankapp.controller.MainMenuController"
            prefWidth="450" prefHeight="500"
            style="-fx-background-color: linear-gradient(to bottom right, #0b486b, #f56217);">

    <children>
        <VBox alignment="CENTER" spacing="30" prefWidth="350" layoutX="50" layoutY="80"
              style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0, 0, 5);">

          
            <Label text="Main Menu"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0b486b;"/>

            
            <Label text="Welcome! Choose an option below."
                   style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>

            
            <Button fx:id="accountManagementButton" text="Account Management"
                    prefWidth="250" prefHeight="50"
                    style="-fx-background-color: #0b486b; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10 20 10 20;"/>

            
            <Button fx:id="transactionsButton" text="Transactions"
                    prefWidth="250" prefHeight="50"
                    style="-fx-background-color: #f56217; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10 20 10 20;"/>

            
            <Hyperlink fx:id="logoutLink" text="Logout"
                       style="-fx-text-fill: #0b486b; -fx-font-weight: bold;"/>

        </VBox>
    </children>
</AnchorPane>
