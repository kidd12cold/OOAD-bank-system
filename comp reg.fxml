<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600" prefWidth="500" style="-fx-background-color: linear-gradient(to bottom right, #0b486b, #f56217);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bankapp.controller.CompanyRegistrationController">

    <children>
        <VBox alignment="CENTER" layoutX="50" layoutY="60" prefWidth="400" spacing="20" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 20, 0, 0, 8);">

            
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0b486b;" text="Company Registration" />

            <Label style="-fx-font-size: 14px; -fx-text-fill: #666666;" text="Please enter your company details below" />

            
            <VBox alignment="TOP_LEFT" spacing="5">
                <Label style="-fx-font-weight: bold; -fx-text-fill: #0b486b;" text="Company Name:" />
                <TextField fx:id="companyNameField" promptText="Enter company name" style="-fx-background-radius: 8; -fx-padding: 8;" />
            </VBox>

           
            <VBox alignment="TOP_LEFT" spacing="5">
                <Label style="-fx-font-weight: bold; -fx-text-fill: #0b486b;" text="Email:" />
                <TextField fx:id="emailField" promptText="Enter company email" style="-fx-background-radius: 8; -fx-padding: 8;" />
            </VBox>

            
            <VBox alignment="TOP_LEFT" spacing="5">
                <Label style="-fx-font-weight: bold; -fx-text-fill: #0b486b;" text="Address:" />
                <TextField fx:id="addressField" promptText="Enter company address" style="-fx-background-radius: 8; -fx-padding: 8;" />
            </VBox>

           
            <VBox alignment="TOP_LEFT" spacing="5">
                <Label style="-fx-font-weight: bold; -fx-text-fill: #0b486b;" text="Company ID:" />
                <TextField fx:id="companyIdField" promptText="Enter company ID" style="-fx-background-radius: 8; -fx-padding: 8;" />
            </VBox>

           
            <Button fx:id="registerButton" prefHeight="45" prefWidth="200" style="-fx-background-color: #f56217; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-font-size: 16px;" text="Register" />

           
            <Hyperlink fx:id="backLink" style="-fx-text-fill: #0b486b; -fx-font-weight: bold;" text="Back to Menu" />

        </VBox>
    </children>
</AnchorPane>
