<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500" prefWidth="400" style="-fx-background-color: linear-gradient(to bottom right, #0b486b, #f56217);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bankapp.controller.SignUpController">

    <children>
        <VBox alignment="CENTER" layoutX="30.0" layoutY="100" prefHeight="359.0" prefWidth="335.0" spacing="25" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0, 0, 5);">

            <!-- Title -->
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0b486b;" text="Create an Account" />

            <!-- Subtitle -->
            <Label style="-fx-font-size: 14px; -fx-text-fill: #666666;" text="Select your account type" />

            <!-- Company/Organisation Button -->
            <Button fx:id="companyButton" prefHeight="50" prefWidth="250" style="-fx-background-color: #0b486b; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10 20 10 20;" text="Company / Organisation" />

            <!-- Individual Button -->
            <Button fx:id="individualButton" prefHeight="50" prefWidth="250" style="-fx-background-color: #f56217; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 10 20 10 20;" text="Individual" />

            <!-- Back to Login -->
            <HBox alignment="CENTER" spacing="5">
                <Label style="-fx-text-fill: #555555;" text="Already have an account?" />
                <Hyperlink fx:id="loginLink" style="-fx-text-fill: #0b486b; -fx-font-weight: bold;" text="Login" />
            </HBox>

        </VBox>
    </children>
</AnchorPane>
